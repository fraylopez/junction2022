  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch App",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "--require=dotenv/config"
      ],
      "args": [
        "${workspaceFolder}/src/test.ts",
        "--timeout",
        "999999"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/",
        "!/node_modules/**"
      ],
      "console": "integratedTerminal"
    },
  ]
}